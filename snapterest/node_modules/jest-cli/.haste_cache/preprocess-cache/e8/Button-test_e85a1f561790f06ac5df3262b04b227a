'use strict';jest.dontMock('../Button.react');

describe('Header', function () {
    var React = require('react');
    var ReactDOM = require('react-dom');
    var TestUtils = require('react-addons-test-utils');
    var Button = require('../Button.react');

    it('uses default', function () {
        var header = TestUtils.renderIntoDocument(
        React.createElement(Header, null));

        var actualText = ReactDOM.findDOMNode(header).textContent;

        expect(actualText).toBe("Default header");});


    it('renders provided text', function () {
        var header = TestUtils.renderIntoDocument(
        React.createElement(Header, { text: 'Testing...' }));

        var actualText = ReactDOM.findDOMNode(header).textContent;

        expect(actualText).toBe("Testing...");});});